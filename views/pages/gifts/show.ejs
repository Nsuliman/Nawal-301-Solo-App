<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Books</title>
    <%- include('../../templates/head') %> 
</head>

<body>
    <header>
        <%- include('../../templates/header') %> 
    </header>
    <main>
        <h2> Search Results </h2>
        <% gifts.forEach((gift)=> { %>
        <div class="bookdetails">
            <p> ** Gif's Details ** </p><br>
            <img class="bookimage" src=<%=gift.image %><br>
            <p class="booktitle">Title : <%-gift.title%></p>
            <p class="bookauthor">Type : <%-gift.type %></p>
            <br><br><br><br>
        </div>
        <% }); %>
    </main>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="../../public/js/app.js"></script>

    <footer>
        <%- include('../../templates/footer') %> 
    </footer>

</body>

</html>