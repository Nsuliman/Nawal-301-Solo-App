<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Books</title>
    <%- include('../../templates/head') %> 
</head>

<body>
    <header>
        <%- include('../../templates/header') %> 
    </header>
    <main>
        <h2> Search Results </h2>
        <% gifts.forEach((gift)=> { %>
        <div class="gifdetails">
            <p> ** Gif's Details ** </p><br>
            <img class="gifimage" src=<%=gift.image %><br>
            <p class="giftitle">Title : <%-gift.title%></p>
            
            <form action ='/add' method="POST" class="formBook">
                <input type="hidden" name="image" value="<%= gift.image%>">
                <input type="hidden" name="title" value="<%= gift.title%>">
                <input type="hidden" name="type" value="<%= gift.type%>">
                <button class="selectbutton" type="submit"> Select This GIF </button>
            </form>
            <br><br>
        </div>
        <% }); %>
    </main>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="../../public/js/app.js"></script>

    <footer>
        <%- include('../../templates/footer') %> 
    </footer>

</body>

</html>